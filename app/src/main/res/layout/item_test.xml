<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="22dp">

            <TextView
                android:id="@+id/tv_question_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ts_chapterTitle"
                android:text="Текст вопроса"/>

            <ImageView
                android:id="@+id/iv_question_bottomLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/line"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_question_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="LinearLayoutManager"
                android:layout_marginTop="12dp"
                tools:listitem="@layout/item_answer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="22dp"
                style="@style/ts_btn"
                android:text="@string/acceptAnswer"
                app:backgroundTintMode="screen"
                android:background="@drawable/gradient_color2"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>